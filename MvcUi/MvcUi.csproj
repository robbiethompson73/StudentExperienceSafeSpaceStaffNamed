    <ProjectReference Include="..\SharedServicesLibrary\SharedServicesLibrary.csproj" />
    <ProjectReference Include="..\SharedViewModelLibrary\SharedViewModelLibrary.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\images\" />
    <Folder Include="wwwroot\uploads\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="EmailTemplates\AdminNotification_SubmissionCreate.cshtml" />
    <None Include="EmailTemplates\UserNotification_SubmissionCreate.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <None Update="EmailTemplates\**\*.cshtml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

</Project>
