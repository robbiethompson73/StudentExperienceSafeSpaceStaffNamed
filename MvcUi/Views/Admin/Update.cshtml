@model SharedViewModelLibrary.Models.MainFormAdminViewModel
@using AyrshireCollege.Biis.PresentationFormattingLibrary.Date;


@{
    ViewData["Title"] = "Update Record";
}


<div class="container py-0">

    <span id="startsection"></span>

    <div class="row">
        <div class="col-12">

            <nav aria-label="breadcrumb" class="breadcrumb-wrapper">
                <ol class="breadcrumb custom-breadcrumb admin mb-3">
                    <li class="breadcrumb-item text-nowrap">
                        <a href="https://biis.ayrshire.ac.uk/StudentExperienceFormsGateway" title="Student Experience Gateway Link">Student Experience Gateway Home</a>
                    </li>

                    <li class="breadcrumb-item text-nowrap">
                        @Html.ActionLink($"{ViewData["AppName"]} Information", "Index", "Home")
                    </li>

                    <li class="breadcrumb-item text-nowrap">
                        @Html.ActionLink("Admin Home", "Index", "Admin")
                    </li>

                    <li class="breadcrumb-item text-nowrap">
                        @Html.ActionLink("View All Records", "List", "Admin")
                    </li>

                    <li class="breadcrumb-item active text-nowrap" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>

            <div class="pageTitle admin">
                <h1 class="display-4">@ViewData["Title"]</h1>
            </div>

            <a asp-action="List"
               asp-controller="Admin"
               class="text-decoration-none d-inline-flex align-items-center mb-3 text-muted body-nav-link-small"
               role="button"
               aria-label="Go back to view all records">
                <i class="fas fa-arrow-left me-2" aria-hidden="true"></i>
                Back to View All Records
            </a>


        </div> @* <div class="col-12"> *@
    </div> @* <div class="row"> *@
</div> @* <div class="container py-0"> *@



@if (TempData["SuccessMessage"] != null)
{
    <div class="container py-1">
        <div class="row">
            <div class="col-12">

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> Your update was successful!
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            </div> @* <div class="col-12"> *@
        </div> @* <div class="row"> *@
    </div> @* <div class="container py-0"> *@
}



<div class="container py-1">

    <!-- Nav Tabs with Font Awesome icons -->
    <ul class="nav nav-tabs mb-3" id="detailsTab" role="tablist">

        <!-- Record Details Tab -->
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab"
                    data-bs-toggle="tab" data-bs-target="#tab0"
                    type="button" role="tab"
                    aria-controls="details" aria-selected="true">
                <i class="fas fa-info-circle me-1"></i> Record Details
            </button>
        </li><!-- /.nav-item -->

        <!-- Update Record Tab -->
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="record-tab"
                    data-bs-toggle="tab" data-bs-target="#tab1"
                    type="button" role="tab"
                    aria-controls="record" aria-selected="false">
                <i class="fas fa-file-alt me-1"></i> Update Record
            </button>
        </li><!-- /.nav-item -->

        <!-- Audit Notes Tab -->
        <li class="nav-item" role="presentation">
            <button class="nav-link d-inline-flex align-items-center" id="other-tab"
                    data-bs-toggle="tab" data-bs-target="#tab2"
                    type="button" role="tab"
                    aria-controls="other" aria-selected="false">
                <i class="fas fa-user-shield me-1"></i> Audit Notes

                @if (!string.IsNullOrWhiteSpace(Model.AdminAuditFormatted))
                {
                    <i class="fas fa-comment-dots fa-xs ms-2" aria-hidden="true"></i>
                    <span class="visually-hidden">Audit notes available</span>
                }
            </button>
        </li><!-- /.nav-item -->

    </ul><!-- /.nav-tabs -->






    <div class="tab-content" id="detailsTabContent">

        <!-- Record Details Tab Pane -->
        <div class="tab-pane fade show active" id="tab0" role="tabpanel" aria-labelledby="details-tab">


            <!-- Student Information Section -->
            <div class="card mt-3 shadow-sm">
                <div class="card-header teal-header text-white">
                    <i class="fas fa-user-graduate me-2"></i>Staff Information
                </div>
                <div class="card-body">


                    <!-- Full Name -->
                    <div class="row pt-2 pb-0 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">
                            Staff Name
                        </div>
                        <div class="col-sm-8 col-md-9">
                            @Html.DisplayFor(model => model.StaffFullName)
                        </div>
                    </div>


                    <!-- Staff Email -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">
                            Staff Email
                        </div>
                        <div class="col-sm-8 col-md-9">
                            @Html.DisplayFor(model => model.StaffEmail)
                        </div>
                    </div>

                    <!-- Staff Telephone Number -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">
                            @Html.DisplayNameFor(model => model.StaffTelephoneNumber)
                        </div>
                        <div class="col-sm-8 col-md-9">
                            @Html.DisplayFor(model => model.StaffTelephoneNumber)
                        </div>
                    </div>



                </div>
            </div>


            <!-- Form Submission Section -->
            <div class="card mt-3 mb-4 shadow-sm">
                @{
                    var cardHeaderClass = Model.StatusDisplayName?.ToLower() switch
                    {
                        "closed" => "card-header teal-header text-white",
                        "open" => "card-header bg-warning text-dark",
                        _ => "card-header"
                    };
                }
                <div class="@cardHeaderClass">


                    <i class="fas fa-pen-to-square me-2"></i>Incident Details
                </div>

                <div class="card-body">




                    <!-- Status -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.StatusId)</div>
                        <div class="col-sm-8 col-md-9">
                            @{
                                var badgeClass = Model.StatusDisplayName?.ToLower() switch
                                {
                                    "closed" => "bg-success",
                                    "open" => "bg-warning text-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.StatusDisplayName</span>
                        </div>
                    </div>




                    <!-- Radio - 4 - IncidentHappenedTo - incidenthappenedto -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.SelectedIncidentHappenedToId)</div>
                        <div class="col-sm-8 col-md-9">

                            <div class="form-check">
                                @for (int i = 0; i < Model.IncidentHappenedToOptions.Count; i++)
                                {
                                    var item = Model.IncidentHappenedToOptions[i];
                                    var itemId = int.Parse(item.Value);
                                    var isChecked = Model.SelectedIncidentHappenedToId == itemId;

                                    if (isChecked)
                                    {
                                        <div class="form-check mb-2 ps-0 ms-0">
                                            <input type="radio"
                                                   name="IncidentHappenedTo"
                                                   id="incidenthappenedto_@item.Value"
                                                   class="form-check-input"
                                                   value="@item.Value"
                                                   disabled
                                                   @(isChecked ? "checked" : null) />
                                            <label class="form-check-label" for="incidenthappenedto_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                            </div>

                            @(Model.IncidentHappenedToName == "Someone Else"
                                                        ? @Model.IncidentPersonName
                                                        : "")
                            


                        </div>
                    </div>


                    <!-- Radio - 6 - NumberOfPeopleImpacted - numberofpeopleimpacted -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.SelectedNumberOfPeopleImpactedId)</div>
                        <div class="col-sm-8 col-md-9">


                            <div class="form-check">
                                @for (int i = 0; i < Model.NumberOfPeopleImpactedOptions.Count; i++)
                                {
                                    var item = Model.NumberOfPeopleImpactedOptions[i];
                                    var itemId = int.Parse(item.Value);
                                    var isChecked = Model.SelectedNumberOfPeopleImpactedId == itemId;

                                    if (isChecked)
                                    {
                                        <div class="form-check mb-2 ps-0 ms-0">
                                            <input type="radio"
                                                   name="NumberOfPeopleImpacted"
                                                   id="numberofpeopleimpacted_@item.Value"
                                                   class="form-check-input"
                                                   value="@item.Value"
                                                   disabled
                                                   @(isChecked ? "checked" : null) />
                                            <label class="form-check-label" for="numberofpeopleimpacted_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>





                    <!-- Radio - 7 - NumberOfPeopleCausedIncident - numberofpeoplecausedincident -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.SelectedNumberOfPeopleCausedIncidentId)</div>
                        <div class="col-sm-8 col-md-9">


                            <div class="form-check">
                                @for (int i = 0; i < Model.NumberOfPeopleCausedIncidentOptions.Count; i++)
                                {
                                    var item = Model.NumberOfPeopleCausedIncidentOptions[i];
                                    var itemId = int.Parse(item.Value);
                                    var isChecked = Model.SelectedNumberOfPeopleCausedIncidentId == itemId;

                                    if (isChecked)
                                    {
                                        <div class="form-check mb-2 ps-0 ms-0">
                                            <input type="radio"
                                                   name="NumberOfPeopleCausedIncident"
                                                   id="numberofpeoplecausedincident_@item.Value"
                                                   class="form-check-input"
                                                   value="@item.Value"
                                                   disabled
                                                   @(isChecked ? "checked" : null) />
                                            <label class="form-check-label" for="numberofpeoplecausedincident_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>




                    <!-- Checkbox - 8 ImpactedPersonType -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">Persons impacted by incident were:</div>
                        <div class="col-sm-8 col-md-9">
                            @foreach (var item in Model.ImpactedPersonTypeOptions)
                            {
                                var itemId = int.Parse(item.Value);
                                var isChecked = Model.SelectedImpactedPersonTypeIds.Contains(itemId);

                                if (isChecked)
                                {
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" disabled checked />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>


                    <!-- Datepicker Textbox - 9 - IncidentDate -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.IncidentDate)</div>
                        <div class="col-sm-8 col-md-9">
                            @DateFormatting.ToLongOrdinalDate(Model.IncidentDate)
                        </div>
                    </div>



                    <!-- Radio - 10 - IncidentLocation - incidentlocation -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.SelectedIncidentLocationId)</div>
                        <div class="col-sm-8 col-md-9">


                            <div class="form-check">
                                @for (int i = 0; i < Model.IncidentLocationOptions.Count; i++)
                                {
                                    var item = Model.IncidentLocationOptions[i];
                                    var itemId = int.Parse(item.Value);
                                    var isChecked = Model.SelectedIncidentLocationId == itemId;

                                    if (isChecked)
                                    {
                                        <div class="form-check mb-2 ps-0 ms-0">
                                            <input type="radio"
                                                   name="IncidentLocation"
                                                   id="incidentlocation_@item.Value"
                                                   class="form-check-input"
                                                   value="@item.Value"
                                                   disabled
                                                   @(isChecked ? "checked" : null) />
                                            <label class="form-check-label" for="incidentlocation_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>



                    <!-- Checkbox - 11 - IncidentBehaviourType -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">Did the incident involve any of the following:</div>
                        <div class="col-sm-8 col-md-9">
                            @foreach (var item in Model.IncidentBehaviourTypeOptions)
                            {
                                var itemId = int.Parse(item.Value);
                                var isChecked = Model.SelectedIncidentBehaviourTypeIds.Contains(itemId);

                                if (isChecked)
                                {
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" disabled checked />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>



                    <!-- Checkbox - 11 - IncidentMotivationType -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">Do you believe the incident was motivated by any of the following:</div>
                        <div class="col-sm-8 col-md-9">
                            @foreach (var item in Model.IncidentMotivationTypeOptions)
                            {
                                var itemId = int.Parse(item.Value);
                                var isChecked = Model.SelectedIncidentMotivationTypeIds.Contains(itemId);

                                if (isChecked)
                                {
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" disabled checked />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>



                    <!-- Radio - 13 - HasSimilarIncidentHappenedBefore - hassimilarincidenthappenedbefore -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.SelectedHasSimilarIncidentHappenedBeforeId)</div>
                        <div class="col-sm-8 col-md-9">


                            <div class="form-check">
                                @for (int i = 0; i < Model.HasSimilarIncidentHappenedBeforeOptions.Count; i++)
                                {
                                    var item = Model.HasSimilarIncidentHappenedBeforeOptions[i];
                                    var itemId = int.Parse(item.Value);
                                    var isChecked = Model.SelectedHasSimilarIncidentHappenedBeforeId == itemId;

                                    if (isChecked)
                                    {
                                        <div class="form-check mb-2 ps-0 ms-0">
                                            <input type="radio"
                                                   name="HasSimilarIncidentHappenedBefore"
                                                   id="hassimilarincidenthappenedbefore_@item.Value"
                                                   class="form-check-input"
                                                   value="@item.Value"
                                                   disabled
                                                   @(isChecked ? "checked" : null) />
                                            <label class="form-check-label" for="hassimilarincidenthappenedbefore_@item.Value">
                                                @item.Text
                                            </label>
                                        </div>
                                    }
                                }
                            </div>

                        </div>
                    </div>


                    <!-- Textarea - IncidentDetails -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">Incident Details</div>
                        <div class="col-sm-8 col-md-9">@Html.DisplayFor(model => model.IncidentDetails)</div>
                    </div>



                    <!-- Record ID -->
                    <div class="row py-2">
                        <div class="col-sm-4 col-md-3 fw-bold">Record ID</div>
                        <div class="col-sm-8 col-md-9">@Model.Id</div>
                    </div>

                    <!-- Date Submitted -->
                    <div class="row py-2 bg-light">
                        <div class="col-sm-4 col-md-3 fw-bold">@Html.DisplayNameFor(model => model.DateSubmitted)</div>
                        <div class="col-sm-8 col-md-9">
                            @DateFormatting.ToLongOrdinalDate(Model.DateSubmitted)
                            at @DateFormatting.ToShortTime(Model.DateSubmitted)
                        </div>
                    </div>




                </div>
            </div>



















        </div> <!-- tab-pane -->

        <!-- Update Record Tab Pane -->
        <div class="tab-pane fade" id="tab1" role="tabpanel" aria-labelledby="record-tab">
            <div class="row">
                <div class="col-md-8 col-lg-6 px-0">


                        <!-- Safeguarding Action Form Section -->
                        <div id="safeguarding-action-form" class="card mt-3 shadow-sm">
                            <div class="card-header admin-section-heading">
                                <h5 class="mb-0">
                                    <i class="fa-solid fa-chevron-right me-2"></i>
                                    Update @ViewData["AppName"] Record
                                </h5>
                            </div>

                            <div class="card-body px-3 px-md-4">





                                @using (Html.BeginForm("Update", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    <!--
                                        Troubleshooting Only (Not for Production)
                                        The validation summary below is useful during development
                                        to quickly see all model binding/validation errors in one place.
                                        In production, consider either:
                                          - limiting this to model-level errors only (excludePropertyErrors: true), or
                                          - removing it entirely and relying on per-field ValidationMessageFor.
                                    -->

                                    @if (!ViewData.ModelState.IsValid)
                                        {
                                            @Html.ValidationSummary(
                                            excludePropertyErrors: false,
                                            message: "Please correct the following errors before submitting:",
                                            htmlAttributes: new { @class = "alert alert-danger" }
                                        )
                                    }


                                    @Html.HiddenFor(m => m.Id)




                                    <!-- TextBox -->
                                    @Html.HiddenFor(m => m.StaffFullName)
                                    @Html.HiddenFor(m => m.StaffTelephoneNumber)
                                    @Html.HiddenFor(m => m.StaffEmail)
                                    @Html.HiddenFor(m => m.IncidentPersonName)
                                    @Html.HiddenFor(m => m.IncidentDate)



                                    <!-- Textarea -->
                                    @Html.HiddenFor(m => m.IncidentDetails)


                                    <!-- Radio Button List -->
                                    @Html.HiddenFor(m => m.SelectedIncidentHappenedToId)
                                    @Html.HiddenFor(m => m.SelectedNumberOfPeopleImpactedId)
                                    @Html.HiddenFor(m => m.SelectedNumberOfPeopleCausedIncidentId)
                                    @Html.HiddenFor(m => m.SelectedIncidentLocationId)
                                    @Html.HiddenFor(m => m.SelectedHasSimilarIncidentHappenedBeforeId)




                                    <!-- Drop Down List -->


                                    <!-- Checkbox Group -->
                                    @foreach (var id in Model.SelectedImpactedPersonTypeIds)
                                    {
                                        @Html.Hidden("SelectedImpactedPersonTypeIds", id)
                                    }

                                    @foreach (var id in Model.SelectedIncidentBehaviourTypeIds)
                                    {
                                        @Html.Hidden("SelectedIncidentBehaviourTypeIds", id)
                                    }

                                    @foreach (var id in Model.SelectedIncidentMotivationTypeIds)
                                    {
                                    @Html.Hidden("SelectedIncidentMotivationTypeIds", id)
                                    }



                                    <div class="admin-section-heading bg-light border rounded p-2 mb-3 mt-4">
                                        <i class="fas fa-user-shield me-2 text-danger"></i>
                                        <span id="adminsection"><strong>Admin Section</strong></span>

                                    </div>

                                    <!-- DDL Status -->
                                    <div class="form-group">
                                        @Html.LabelWithRequiredIndicatorFor(m => m.AdminStatusId)

                                        @Html.DropDownListFor(m => m.AdminStatusId, Model.StatusOptions, "Select a Status", new Dictionary<string, object>
                                        {
                                            { "class", "form-select" },                                     // Apply Bootstrap styling
                                            { "aria-describedby", "AdminStatusId-validation" },     // Link to the validation message span for screen readers
                                            { "aria-invalid", (ViewData.ModelState["AdminStatusId"]?.Errors?.Count ?? 0) > 0 ? "true" : "false" }   // Indicate if the field is currently in an invalid state
                                        })

                                        @Html.ValidationMessageFor(m => m.AdminStatusId, "", new
                                        {
                                            @class = "form-error-message",
                                            id = "AdminStatusId-validation",
                                            @aria_live = "assertive"
                                        })
                                    </div>




                                    <!-- TextBox StaffMemberAssignedAdmin -->
                                    <div class="form-group">
                                        @Html.LabelWithRequiredIndicatorFor(m => m.StaffMemberAssignedAdmin)

                                        @Html.TextBoxFor(m => m.StaffMemberAssignedAdmin, new Dictionary<string, object>
                                        {
                                            // Apply Bootstrap styling to the input field for consistent UI design.
                                            { "class", "form-control" },

                                            // Connects this input to its corresponding validation message span using the 'id' attribute.
                                            // This improves accessibility for screen reader users.
                                            { "aria-describedby", "StaffMemberAssignedAdmin-validation" },

                                            // Dynamically sets the aria-invalid attribute based on whether the model state contains errors.
                                            // This allows screen readers to announce when a field has failed validation.
                                            { "aria-invalid", (ViewData.ModelState["StaffMemberAssignedAdmin"]?.Errors?.Count ?? 0) > 0 ? "true" : "false" }, // Set aria-invalid to "true" if there are any model state validation errors for this field; otherwise "false"

                                            // Explicit ID for JS targeting
                                            { "id", "StaffMemberAssignedAdmin" }                      
                                        })


                                        @Html.ValidationMessageFor(m => m.StaffMemberAssignedAdmin, "", new
                                        {
                                            @class = "form-error-message",
                                            id = "StaffMemberAssignedAdmin-validation",               // unique id for validation message span
                                            @aria_live = "assertive"                    // announce validation changes immediately
                                        })
                                    </div>



                                    <!-- Textarea ActionTakenByCollegeAdmin -->
                                    <div class="form-group">
                                        @Html.LabelWithRequiredIndicatorFor(m => m.ActionTakenByCollegeAdmin)
                                        @Html.TextAreaFor(m => m.ActionTakenByCollegeAdmin, new Dictionary<string, object>
                                        {
                                            { "class", "form-control" },                        // Apply Bootstrap styling and fixed height
                                            { "rows", "4" },                                    // Set number of visible rows
                                            { "id", Html.IdFor(m => m.ActionTakenByCollegeAdmin) },         // Ensure ID is consistent with the label 'for' attribute
                                            { "aria-describedby", "ActionTakenByCollegeAdmin-validation" }, // Link to validation message span for screen readers
                                            { "aria-invalid", (ViewData.ModelState["ActionTakenByCollegeAdmin"]?.Errors?.Count ?? 0) > 0 ? "true" : "false" } // Indicate whether the field has a validation error
                                        })

                                        @Html.ValidationMessageFor(m => m.ActionTakenByCollegeAdmin, "", new
                                        {
                                            @class = "form-error-message",
                                            id = "ActionTakenByCollegeAdmin-validation",               // unique id for validation message span
                                            @aria_live = "assertive"                    // announce validation changes immediately
                                        })

                                    </div>




                                    <!-- Admin Comments -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AdminNote)  <!-- no required indicator for optional field -->
                                        @Html.TextAreaFor(m => m.AdminNote, new Dictionary<string, object>
                                        {
                                            { "class", "form-control" },                        // Apply Bootstrap styling and fixed height
                                            { "rows", "4" },                                    // Set number of visible rows
                                            { "id", Html.IdFor(m => m.AdminNote) },         // Ensure ID is consistent with the label 'for' attribute
                                            { "aria-describedby", "AdminNote-validation" }, // Link to validation message span for screen readers
                                            { "aria-invalid", (ViewData.ModelState["AdminNote"]?.Errors?.Count ?? 0) > 0 ? "true" : "false" } // Indicate whether the field has a validation error
                                        })

                                        <small class="form-text text-muted">
                                            Use this field to record active notes or ongoing comments related to this record.
                                        </small>

                                    </div>




                                    <button type="submit"
                                            class="btn btn-teal w-100 w-md-auto"
                                            aria-label="Submit form to Update item">
                                        Update <i class="fas fa-angle-double-right fa-sm ms-1"></i>
                                    </button>

                                    <button type="reset"
                                            class="btn btn-secondary w-100 w-md-auto"
                                            aria-label="Clear form and reset values">
                                        Clear
                                    </button>


                                } @* // using *@


                            </div> <!-- // <div class="card-body"> -->




                            <!-- Long Procesisng Modal  -->
                            <div class="modal fade" id="processingModal" tabindex="-1" aria-labelledby="processingModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content text-center">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="processingModalLabel" style="color: #00818a !important;">Form Updating...</h5>
                                        </div>
                                        <div class="modal-body">
                                            <div class="spinner-border text-primary mb-3" role="status" aria-hidden="true" style="color: #00818a !important;"></div>
                                            <p style="color: #00818a !important;">
                                                <strong>Updating your form...</strong><br />
                                                This may take a few moments.<br /> Please <em>wait until you see a confirmation message</em> before leaving the page.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>





                        </div> <!-- // <div class="card mt-3 shadow-sm"> -->


                </div> <!-- col-md-8 col-lg-6 px-0-->
            </div>
        </div>





        <!-- Audit Notes Tab Pane -->
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="other-tab">
